<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.example.talkbrancer.setting.SettingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setting.PeopleSettingFragment">
        <ScrollView
            android:id="@+id/people_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/shape">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/people_num_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/join_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="参加する方を登録"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="－"
                    android:padding="15dp"
                    android:onClick="@{() -> data.deleteLast()}"
                    android:visibility="@{data.peopleCount > 1 ? View.VISIBLE : View.INVISIBLE}"
                    android:layout_margin="30dp"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@id/people_text"
                    app:layout_constraintBottom_toBottomOf="@id/people_text"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/people_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/join_text"
                    android:textSize="35sp"
                    android:text="@{data.peopleCount.toString() + @string/people_num }"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="＋"
                    android:layout_margin="30dp"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:onClick="@{() -> data.addUsers()}"
                    app:layout_constraintTop_toTopOf="@id/people_text"
                    app:layout_constraintBottom_toBottomOf="@id/people_text"
                    app:layout_constraintEnd_toEndOf="parent" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="30dp"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/people_text"
                    tools:listitem="@layout/user_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
        <Button
            android:id="@+id/back_people_setting_to_title_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/people_setting"
            android:layout_margin="10dp"
            android:text="戻る"
            app:layout_constraintTop_toBottomOf="@+id/people_setting"/>
        <Button
            android:id="@+id/go_user_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/people_setting"
            android:layout_margin="10dp"
            android:text="進む"
            app:layout_constraintTop_toBottomOf="@+id/people_setting"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>