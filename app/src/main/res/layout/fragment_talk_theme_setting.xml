<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.talkbrancer.setting.TalkThemeSettingViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="100dp"
            android:id="@+id/talk_theme_form_area"
            android:background="@drawable/shape">
            <TextView
                android:id="@+id/talk_theme_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.userName + @string/san}"
                android:layout_margin="20dp"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/talk_theme_recommend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/talk_theme"
                android:textSize="21sp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/talk_theme_user_text"
                app:layout_constraintStart_toStartOf="@id/talk_theme_user_text" />
            <ToggleButton
                android:id="@+id/share_talk_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/to_all"
                android:textOn="@string/with_all"
                android:layout_marginTop="40dp"
                android:checked="@={data.shareTalkMode}"
                app:layout_constraintTop_toBottomOf="@+id/talk_theme_recommend_text"
                app:layout_constraintStart_toStartOf="@+id/talk_theme_recommend_text"/>
            <EditText
                android:id="@+id/want_to_talk_edit"
                android:layout_width="wrap_content"
                android:inputType="text"
                android:layout_margin="20dp"
                android:text="@{data.wantToTalk}"
                app:layout_constraintStart_toEndOf="@+id/share_talk_switch"
                app:layout_constraintTop_toTopOf="@+id/share_talk_switch"
                app:layout_constraintBottom_toBottomOf="@+id/share_talk_switch"
                android:hint="@string/want_to_talk_theme_hint"
                android:layout_height="wrap_content" />
            <ToggleButton
                android:id="@+id/share_hear_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/to_all"
                android:textOn="@string/something"
                android:layout_marginTop="40dp"
                android:checked="@={data.shareHereMode}"
                app:layout_constraintTop_toBottomOf="@+id/share_talk_switch"
                app:layout_constraintStart_toStartOf="@+id/share_talk_switch"/>

            <EditText
                android:id="@+id/want_you_to_talk_edit"
                android:layout_width="wrap_content"
                android:inputType="text"
                android:text="@{data.wantYouToTalk}"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/want_to_talk_edit"
                app:layout_constraintStart_toStartOf="@+id/want_to_talk_edit"
                android:hint="@string/want_you_to_talk_theme_hint"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/talk_form_attention_text"
                android:layout_margin="40dp"
                android:textColor="@color/colorSubAttention"
                app:layout_constraintTop_toBottomOf="@id/want_you_to_talk_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/next_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/talk_theme_form_area"
        android:layout_margin="15dp"
        android:onClick="@{() -> data.nextUser()}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/next_user"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>